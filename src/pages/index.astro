---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Card from "../components/Card.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Recorre Chile ctm!">
	<main>
		<Header />

		<h1>Recorre <span class="text-gradient"> Chile</span></h1>
		<p class="instructions">
			Bienvenido a Recorre Chile, la Web dedicada al turismo emprendedor
			de nuestro pais.
		</p>
		<!--<p class="instructions_2">
			Zona Habilitada VI Region del Libertador Bernardo Ohiggins
		</p> -->

		<ul role="list" class="link-card-grid">
			<Card
				title="Reserva Tipaume"
				body="La Reserva es un proyecto de Ecoturismo que cuenta con diversas actividades al aire libre aptas para toda la familia."
				href="https://www.reservatipaume.cl/"
				tags={["Aventura", "Trekking"]}
				imageUrl="https://cdn.andeshandbook.org/media/route_gallery/1589240351253978622.jpg"
				facebookUrl="https://web.facebook.com/tipaumereserva"
				twitterUrl="reservatipaume@gmail.com"
				instagramUrl="https://www.instagram.com/reservatipaume/"
				whatsappUrl="https://web.whatsapp.com/"
			/>
			<Card
			title="Museo Colchagua"
			body="El Museo de Colchagua es un museo chileno ubicado en la comuna de Santa Cruz, en la Región del Libertador Bernardo O'Higgins. Es una institución de carácter privado, administrado por la Fundación Cardoen."
			href="https://www.santarita.com/"
			tags={["Aventura", "Historia", "Cultura"]}
			imageUrl="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/15/3d/e2/cb/20181027-182337-largejpg.jpg"
			facebookUrl="https://web.facebook.com/"
			twitterUrl="https://web.whatsapp.com/"
			instagramUrl="https://www.instagram.com/"
			whatsappUrl="https://web.whatsapp.com/"
		/>
		<Card
			title="Salinas de Cahuil"
			body="A sólo 15 km de Pichilemu en el poblado de Cáhuil, región de O'Higgins, llaman la atención unas piscinas rectangulares de tonos rojizos y blancos"
			href="https://www.santarita.com/"
			tags={["Aventura", "Historia", "Cultura"]}
			imageUrl="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/0e/b3/a7/ef/photo3jpg.jpg"
			facebookUrl="https://web.facebook.com/"
			twitterUrl="https://web.whatsapp.com/"
			instagramUrl="https://www.instagram.com/"
			whatsappUrl="https://web.whatsapp.com/"
		/>
			<Card
				title="Reserva Nacional Río Los Cipreses"
				body="Reserva nacional Rio cipreses es un parque nacional que esta ubicado a 45 minutos desde Rancagua pasando por Coya hacia la cordillera de los andes."
				href="https://www.santarita.com/"
				tags={["Aventura", "Historia", "Cultura"]}
				imageUrl="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/07/5d/36/3b/fin-del-sendero-carrazal.jpg"
				facebookUrl="https://web.facebook.com/"
				twitterUrl="https://web.whatsapp.com/"
				instagramUrl="https://www.instagram.com/"
				whatsappUrl="https://web.whatsapp.com/"
			/>
			<Card
				title="Parque Safari"
				body="Vive una experiencia inolvidable, en las habitaciones familiares del Hotel Safari Lodge"
				href="https://www.santarita.com/"
				tags={["Aventura", "Historia", "Cultura"]}
				imageUrl="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/2b/a4/0e/6b/caption.jpg"
				facebookUrl="https://web.facebook.com/"
				twitterUrl="https://web.whatsapp.com/"
				instagramUrl="https://www.instagram.com/"
				whatsappUrl="https://web.whatsapp.com/"
			/>
			<Card
			title="Monticello Grand Casino"
			body="Monticello, ​ anteriormente llamado Monticello Grand Casino y Sun Monticello, ​ es un complejo que incluye un casino de juego, un hotel, un estadio cubierto de eventos multipropósito"
			href="https://www.santarita.com/"
			tags={["Aventura", "Historia", "Cultura"]}
			imageUrl="https://g3newswire.com/wp-content/uploads/2013/01/Monticello.jpg"
			facebookUrl="https://web.facebook.com/"
			twitterUrl="https://web.whatsapp.com/"
			instagramUrl="https://www.instagram.com/"
			whatsappUrl="https://web.whatsapp.com/"
		/>
		</ul>
		<Footer />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 2rem;
		width: 1100px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 300%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background-color: #1a1a1a;
		padding: 1.5rem;
		text-align: center; /* Alinea el texto horizontalmente al centro */
	}

	.instructions_2 {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background-color: #1a1a1a;
		padding: 0.5rem;
		text-align: center; /* Alinea el texto horizontalmente al centro */
	}

	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
