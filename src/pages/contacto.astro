---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";

import Footer from "../components/Footer.astro";
---

<Layout title="Recorre Chile ctm!">
    <main>
        <Header />

        <h1>Recorre <span class="text-gradient"> Chile</span></h1>
        <p class="instructions">
            Bienvenido a Recorre Chile, la Web dedicada al turismo emprendedor
            de nuestro pais.
			<br>
			Welcome to Recruit Chile, the website dedicated to entrepreneurial tourism
in our country.
        </p>
        <p class="contact-info">
            Para más información o consultas, contáctanos en: <a href="mailto:angelcorral2023@gmail.com" style="color: white;">angelcorral2023@gmail.com</a><br>
			For more information or queries, please contact us at: <a href="mailto:angelcorral2023@gmail.com" style="color: white;">angelcorral2023@gmail.com</a>
		
		</p>


        <Footer />
    </main>
</Layout>

<style>
    
	main {
		margin: auto;
		padding: 2.5rem;
		width: 1400px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 5rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 300%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background-color: #1a1a1a;
		padding: 1.5rem;
		text-align: center; /* Alinea el texto horizontalmente al centro */
	}

	.instructions_2 {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background-color: #1a1a1a;
		padding: 0.5rem;
		text-align: center; /* Alinea el texto horizontalmente al centro */
	}

	.instructions strong {
		color: rgb(var(--accent-light));
	}
</style>
