<header>
  <nav>
    <!-- Enlaces de navegación -->
    <div class="nav-links">
      <a href="/">Inicio</a>
      <a href="/proyecto">Proyecto</a>
      <a href="/equipo">Equipo</a>
      <a href="/contacto">Contacto</a>
    </div>
    
    <!-- Menú para móviles (icono hamburguesa) -->
    <div class="menu-toggle" id="menuToggle">&#9776;</div> <!-- Icono de hamburguesa -->
  </nav>

  <!-- Menú móvil -->
  <div class="mobile-menu" id="mobileMenu">
    <a href="/">Inicio</a>
    <a href="/proyecto">Proyecto</a>
    <a href="/equipo">Equipo</a>
    <a href="/contacto">Contacto</a>
  </div>
</header>

<style>
  #header {
    border-bottom: 1px solid #e20202;
  }

  nav {
    display: flex;
    justify-content: center; /* Centrar los elementos del nav */
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem;
    width: 100%; /* Asegura que el nav ocupe todo el ancho disponible */
    font-family: "Poppins", sans-serif;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
    justify-content: center; /* Centrar los enlaces en el contenedor */
    width: 100%; /* Asegura que los enlaces ocupen el 100% del ancho disponible */
  }

  .nav-links a {
    color: #000; /* Cambié el color del texto a negro */
    text-decoration: none;
    font-weight: 540;
    transition: color 0.3s ease, transform 0.3s ease; /* Transición suave */
  }

  .nav-links a:hover {
    color: #ffcc00; /* Color rojizo cuando se pasa el ratón */
    transform: scale(1.1); /* Aumenta ligeramente el tamaño */
  }

  .menu-toggle {
    display: none;
    font-size: 2rem; /* Aumenté el tamaño del icono */
    cursor: pointer;
    color: #000; /* Cambié el color del icono a negro */
  }

  .mobile-menu {
    display: none;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1rem;
  }

  .mobile-menu a {
    color: #000; /* Cambié el color del texto en el menú móvil a negro */
    text-decoration: none;
    font-weight: 500;
    padding: 1rem;
    border-bottom: 1px solid #ccc;
    transition: color 0.3s ease, transform 0.3s ease;
  }

  .mobile-menu a:hover {
    color: #e20202; /* Color rojizo cuando se pasa el ratón */
    transform: scale(1.1); /* Aumenta ligeramente el tamaño */
  }

  /* Estilos para pantallas pequeñas */
  @media (max-width: 768px) {
    .nav-links {
      display: none; /* Esconde los enlaces en pantallas pequeñas */
    }

    .menu-toggle {
      display: block;
    }

    .mobile-menu.active {
      display: flex; /* Muestra el menú móvil cuando tiene la clase activa */
    }
  }
</style>

<script>
  const menuToggle = document.getElementById('menuToggle');
  const mobileMenu = document.getElementById('mobileMenu');

  menuToggle.addEventListener('click', () => {
    mobileMenu.classList.toggle('active'); /* Activa o desactiva el menú */
  });
</script>
